{
  "pluginAlias": "midea-air",
  "pluginType": "platform",
  "singular": true,
  "customUi": false,
  "headerDisplay": "Homebridge plugin for Midea AC",
  "footerDisplay": "Created by @hillaliy",
  "schema": {
    "type": "object",
    "properties": {
      "user": {
        "title": "Midea account email",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Midea account password",
        "type": "string",
        "x-schema-form": {
          "type": "password",
          "required": true
        }
      },
      "interval": {
        "title": "Update interval in seconds",
        "description": "Time in seconds between each status polling of the Midea devices, Default is 30",
        "type": "integer",
        "minimum": 0,
        "maximum": 600
      },
      "debug": {
        "title": "Enable Debug Mode",
        "description": "When checked, the plugin will produce extra logs for debugging purposes",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "devices": {
        "type": "array",
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "deviceId": {
              "title": "Device ID",
              "type": "string"
            },
            "supportedSwingModes": {
              "title": "Supported Swing Modes",
              "description": "None, Vertical, Horizontal, Both You have to select which type your device supports",
              "type": "string",
              "default": "both",
              "required": true,
              "oneOf": [
                {
                  "title": "None",
                  "enum": [
                    "None"
                  ]
                },
                {
                  "title": "Vertical",
                  "enum": [
                    "Vertical"
                  ]
                },
                {
                  "title": "Horizontal",
                  "enum": [
                    "Horizontal"
                  ]
                },
                {
                  "title": "Both",
                  "enum": [
                    "Both"
                  ]
                }
              ]
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "key": "properties",
      "type": "array",
      "items": [
        "user",
        "password"
      ]
    },
    {
      "key": "devices",
      "type": "array",
      "expandable": true,
      "orderable": false,
      "buttonText": "Add device",
      "items": [
        "devices[].deviceId",
        "devices[].supportedSwingModes"
      ]
    },
    {
      "key": "Advanced Settings",
      "type": "fieldset",
      "expandable": true,
      "description": "Don't change these, unless you understand what you're doing.",
      "items": [
        "interval",
        "debug"
      ]
    }
  ]
}